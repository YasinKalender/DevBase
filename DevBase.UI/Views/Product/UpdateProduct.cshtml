@model ProductUpdateDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update Product</h1>


@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input type="text" asp-for="ProductName" class="form-control" />


    </div>

    <div class="form-group">
        <label asp-for="ProductDescription"></label>
        <input type="text" asp-for="ProductDescription" class="form-control" />


    </div>


    <label>Image</label>
    <input type="file" asp-for="Image" class="form-control" />

    <select asp-for="CategoryID" asp-items="ViewBag.category" class="form-control">

        <option value="-1">Lütfen değer seçiniz</option>



    </select>

    <button type="submit" class="btn btn-primary">Add</button>



}


